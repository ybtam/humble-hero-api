    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "drizzle-kit": "^0.30.4",
    "tsx": "^4.19.2",
    "eslint": "^9.20.0",
    "eslint-plugin-perfectionist": "^4.8.0"
  }
